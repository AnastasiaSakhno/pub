<h1>Listing menus</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @menus.each do |menu| %>
  <tr>
    <td><%= menu.name %></td>
    <td><%= Category.find(menu.category_id).name %></td>
    <td><%= menu.price %></td>
    <td><%= link_to (t :show), menu %></td>
    <td><%= link_to (t :edit), edit_menu_path(menu) %></td>
    <td><%= link_to (t :destroy), menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Menu', new_menu_path %>
