<h1>Listing categories</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= link_to (t :show), category %></td>
    <td><%= link_to (t :edit), edit_category_path(category) %></td>
    <td><%= link_to (t :destroy), category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

