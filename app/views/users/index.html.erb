<h1><%= t :users %></h1>
<br/>

<% if can? :manage, :User %>
    <% @users.each do |user| %>
        <%= render :template => 'users/show', :locals => {:user => @user = user} %>
        <%= link_to (t :show), user, class: 'btn btn-mini' %>
        <td><%= link_to (t :edit), edit_user_path(user), class: 'btn btn-mini btn-warning' %></td>
        <% if @users.last != user %>
            <hr/>
        <% end %>
    <% end %>
<% end %>
