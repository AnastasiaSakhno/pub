<body onload="printWindow()">
<div class="print">
  <img src="<%= asset_path "MakhnoPub_logo.png" %>" class="logo"/>
  <table>
    <thead>
    <tr class="bold right">
      <th></th>
      <td colspan="3"><%= I18n.localize(@order.datetime, :format => :standart) %></td>
      <th></th>
      <th></th>
    </tr>
    <tr class="bold right">
      <th><%= t 'activerecord.attributes.order.id' %></th>
      <th><%= @order.id %></th>
      <th></th>
      <th></th>
    </tr>
    <tr class="bold right">
      <th><%= t 'activerecord.attributes.order.table_number' %></th>
      <th><%= @order.table_number %></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td><br/></td>
    </tr>
    <%
       to_pay = 0
       @order.sales.each_with_index do |sale|
         total_price = sale.count * sale.price
         to_pay += total_price
    %>
        <tr>
          <td><%= Menu.find(sale.menu_id).name %></td>
          <td class="right"><%= sale.count %></td>
          <td class="right"><%= sale.price %></td>
          <td class="right"><%= total_price %></td>
        </tr>
    <% end %>
    <tr>
      <td><br/></td>
    </tr>
    <tr>
      <td><br/></td>
    </tr>
    <tr class="bold right">
      <td></td>
      <td></td>
      <td><%= t 'activerecord.attributes.sale.total_price' %></td>
      <td><%= to_pay %></td>
    </tr>
    <tr class="bold">
      <td colspan="4"><%= t 'activerecord.attributes.order.welcome' %></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    </tbody>
  </table>
  <br/>
  <pre class="bold"><%= t 'activerecord.attributes.order.bottom_text' %></pre>
</div>
</body>


<script>
    function printWindow() {
        print();
        close();
    }
</script>

<style>
    .print {
        width: 215;
    }

    table {
        font-family: Arial, Helvetica, sans-serif;
        font-size: small;
    }

    td {
        vertical-align: top;
    }

    pre {
        white-space: -moz-pre-wrap; /* Mozilla, supported since 1999 */
        white-space: -pre-wrap; /* Opera */
        white-space: -o-pre-wrap; /* Opera */
        white-space: pre-wrap; /* CSS3 - Text module (Candidate Recommendation) http://www.w3.org/TR/css3-text/#white-space */
        word-wrap: break-word; /* IE 5.5+ */
        text-align: center;
    }

    img.logo {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 188;
    }

    .bold {
        font-weight: bold;
    }

    .right {
        text-align: right;
    }
</style>
