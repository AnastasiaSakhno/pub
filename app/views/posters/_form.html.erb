<%= form_for(@poster) do |f| %>
    <div><%= f.label :url %>
      <br/>
      <%= f.file_field :url %>
      <%= f.hidden_field :url_cache %>
    </div>
    <div class="field">
      <%= f.label :title %>
      <br/>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :context %>
      <br/>
      <%= f.text_area :context %>
    </div>
    <div class="field">
      <%= f.label :approximate_date %>
      <br/>
      <%= f.datetime_select :approximate_date %>
    </div>
    <div class="actions">
      <%= f.submit "#{t :continue}" %>
    </div>
<% end %>
