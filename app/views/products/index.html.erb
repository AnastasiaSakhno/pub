<h1>Listing products</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Incoming price</th>
    <th>Sale price</th>
    <th>Total count</th>
    <th>Amount per one</th>
    <th>Measure</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.incoming_price %></td>
    <td><%= product.sale_price %></td>
    <td><%= product.total_count %></td>
    <td><%= product.amount_per_one %></td>
    <td><%= product.measure %></td>
    <td><%= link_to (t :show), product %></td>
    <td><%= link_to (t :edit), edit_product_path(product) %></td>
    <td><%= link_to (t :destroy), product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

