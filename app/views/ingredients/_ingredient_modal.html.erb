<!-- ingredient creating modal window -->
<div class="modal hide" id="create-ingredient">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3><%= t 'activerecord.attributes.ingredient.new' %></h3>
  </div>
  <div class="modal-body">
    <%= render 'ingredients/form', :locals => {:ingredient => @ingredient = Ingredient.new} %>
  </div>
</div>