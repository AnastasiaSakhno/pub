<h1>Listing ingredients</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Menu</th>
    <th>Amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ingredients.each do |ingredient| %>
  <tr>
    <td><%= Product.find(ingredient.product_id).name %></td>
    <td><%= Menu.find(ingredient.menu_id).name %></td>
    <td><%= ingredient.amount %></td>
    <td><%= link_to (t :show), ingredient %></td>
    <td><%= link_to (t :edit), edit_ingredient_path(ingredient) %></td>
    <td><%= link_to (t :destroy), ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Ingredient', new_ingredient_path %>
