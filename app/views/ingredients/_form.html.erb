<%= form_for(@ingredient) do |f| %>
    <% if @ingredient.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@ingredient.errors.count, "error") %> prohibited this ingredient from being saved:</h2>

          <ul>
            <% @ingredient.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :menu_id %>
      <br/>
      <%= f.select :menu_id, options_from_collection_for_select(Menu.all, "id", "name", @ingredient.menu_id), :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label :product_id %>
      <br/>
      <%= f.select :product_id, options_from_collection_for_select(Product.all, "id", "name", @ingredient.product_id), :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label :amount %>
      <br/>
      <%= f.text_field :amount %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
