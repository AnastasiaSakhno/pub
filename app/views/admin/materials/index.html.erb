<h1><%= t :materials %></h1>

<table>
  <tr>
    <th><%= t 'activerecord.attributes.cast.name' %></th>
    <th></th>
    <th></th>
  </tr>

  <% @cast.materials.each do |material| %>
      <tr>
        <td><%= material.name %></td>
        <td><%= link_to (t :show), cast_material_path(@cast, material) %></td>
        <td><%= link_to (t :edit), edit_cast_material_path(@cast, material) %></td>
      </tr>
  <% end %>
</table>

