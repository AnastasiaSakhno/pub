<ul>
  <% Category.all.each do |category| %>
      <li>
        <%= category.name %>
        <% if can? :manage, Ingredient %>
            <%= link_to (t :edit), edit_category_path(category), class: 'btn btn-mini btn-warning' %>
            <%= button_to (t :destroy), category, method: :delete, confirm: 'Are you sure?', class: 'btn btn-mini btn-danger' %>
        <% end %>
      </li>
  <% end %>
</ul>